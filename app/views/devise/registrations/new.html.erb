<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="ui segment inverted">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="ui form inverted">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" , placeholder: 'Password'%>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Repeat your password' %>
    </div>
    <%= f.submit "Sign up", class: 'ui button'%> Already have account? <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>


